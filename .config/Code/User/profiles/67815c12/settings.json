{
  "window.zoomLevel": 3,
  "files.autoSave": "onWindowChange",

  // theme
  "workbench.colorTheme": "Ayu Dark",
  "workbench.colorCustomizations": {
    //"sideBar.background": "#242936",
  },
  
  // font and icons
  "editor.fontSize": 13, // with zoom level 2 is ok font-size
  "editor.fontFamily": "JetBrainsMono Nerd Font, 'Droid Sans Mono', 'monospace', monospace",
  // JetBrainsMono Font, if other computer
  "editor.fontLigatures": true, // beutiful == and ->
  "workbench.iconTheme": "vscode-icons", // status bar is where extensions, files
  
  // hide some stupid things
  "window.menuBarVisibility": "hidden", // status bar is top thing (Files, View and etc)
  "breadcrumbs.enabled": false, // breadcrumb is a path from bottom
  "zenMode.showTabs": "none",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "off",
  "workbench.editor.showTabs": "none", // Switch buffers using Ctrl-x Ctrl-f

  // disable scroll bar
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",

  // Explorer:
  // --
  // in explorer indent guides and colors (git statuses of files)
  // are useless
  "workbench.tree.renderIndentGuides": "none",
  "explorer.decorations.colors": false,
  "explorer.decorations.badges": false,
  "workbench.startupEditor": "welcomePage",
  
  // confirmation is bad! (c)
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // line spacing is matters
  "editor.lineHeight": 1.5,
  "editor.padding.top": 0.5,
  
  /// Editing Settings!! (almost Emacs (joke))
  "editor.useTabStops": false,
  
  // ...
  "files.insertFinalNewline": true,

  /// Settings of Extensions Installiation
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,

  // Git
  "git.autofetch": true,
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.editor.editorActionsLocation": "hidden",
}
